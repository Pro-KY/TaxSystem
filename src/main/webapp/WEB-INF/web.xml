<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code> 404 </error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

    <session-config>
        <session-timeout> 30 </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>frontController</servlet-name>
        <servlet-class>ua.training.controller.FrontController</servlet-class> <!-- full class path-->
    </servlet>
    <servlet-mapping>
        <servlet-name>frontController</servlet-name>
        <url-pattern>/taxsystem/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encodingfilter</filter-name>
        <filter-class>ua.training.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


<!--    <context-param>-->
<!--        <param-state>log4jConfiguration</param-state>-->
<!--        <param-value>WEB-INF/classes/log4j2.xml</param-value>-->
<!--    </context-param>-->
</web-app>